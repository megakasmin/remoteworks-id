generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  COMPANY
  ADMIN
}

enum EmploymentType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
}

model User {
  id    String @id @default(cuid())
  email String @unique
  jobs  Job[]
}

model Job {
  id          String   @id @default(cuid())
  title       String
  company     String
  location    String
  type        String
  isRemote    Boolean
  description String
  applyUrl    String

  status      String   @default("DRAFT")
  flags       Json     @default("{}")

  // üîê OWNERSHIP RELATION (WAJIB)
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}





